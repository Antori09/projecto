    <!-- Body section of the HTML document -->
    <script>
      // Get the search input element
      const searchInput = document.getElementById('search-input');
      
      // Add an event listener to the search input for keypress events
      searchInput.addEventListener('keypress', function(event) {
        // Check if the Enter key was pressed
        if (event.key === 'Enter') {
          // Get the search term from the input field
          const searchTerm = searchInput.value.trim();
          
          // Log the search term to the console
          console.log(`Searching for: ${searchTerm}`);
          
          // Get the search input element again (not necessary, but included for clarity)
          const searchInput = document.getElementById('search-input');
          
          // Define an array of orders
          const orders = [
            { id: 1, name: 'ALMADRABA ROLL' },
            { id: 2, name: 'SUSHI BOWL' },
            { id: 3, name: 'SASHIMI PLATE' },
            // Add more orders to the list
          ];
          
          // Add an event listener to the search input for keypress events (again, not necessary)
          searchInput.addEventListener('keypress', function(event) {
            // Check if the Enter key was pressed
            if (event.key === 'Enter') {
              // Get the search term from the input field and convert to lowercase
              const searchTerm = searchInput.value.trim().toLowerCase();
              
              // Filter the orders array to find matching orders
              const matchingOrders = orders.filter(order => order.name.toLowerCase().includes(searchTerm));
              
              // Log the matching orders to the console
              if (matchingOrders.length > 0) {
                console.log(`Matching orders: ${matchingOrders.map(order => order.name).join(', ')}`);
              } else {
                console.log(`No matching orders found for: ${searchTerm}`);
              }
            }
          });
        }
      });
    </script>
